---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
---

<MainLayout title="Andrey Rud Portfolio">
	<Header />

	<main class="pt-32">
		<section class="relative h-screen overflow-hidden flex items-center justify-center bg-[#f5f5f5]">

			{/* radial glow под портрет/контент */}
			<div
				class="pointer-events-none absolute left-1/2 top-[58%]
               -translate-x-1/2 -translate-y-1/2
               w-[1200px] h-[800px]
               bg-[radial-gradient(circle,rgba(159,192,243,1)_0%,rgba(159,192,243,0.70)_20%,transparent_70%)]
               blur-2xl"
			/>

			<h1 class="relative z-10 text-4xl font-semibold">
				Hero Section
			</h1>
		</section>
	</main>
</MainLayout>